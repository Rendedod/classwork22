<Window x:Class="WPF22._1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF22._1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0.3*"/>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <Menu>
            <MenuItem Header="Задачи">
                <MenuItem Header="Добавить задачу"
                          Name="AddZ"
                          Click="AddZ_Click"/>
                <MenuItem Header="Список задач"
                          Name="ListZ"
                          Click="ListZ_Click"/>
                <MenuItem Header="Очистить задачи"
                          Name="ClearZ"
                          Click="ClearZ_Click"/>
            </MenuItem>
        </Menu>
            <ListView Name="DoList"
                  Visibility="Hidden">
            </ListView>
        </StackPanel>

        <StackPanel Grid.Column="1">
            <TextBlock Text="Введите задачу"/>
            <TextBox x:Name="tb"
                     TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>
